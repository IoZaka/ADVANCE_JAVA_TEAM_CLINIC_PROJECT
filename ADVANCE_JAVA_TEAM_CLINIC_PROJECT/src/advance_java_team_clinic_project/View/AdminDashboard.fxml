<BorderPane fx:id="adminPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="1000.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="advance_java_team_clinic_project.Controller.AdminDashboardController">
   <left>
      <VBox prefHeight="600.0" prefWidth="180.0" styleClass="sidebar" stylesheets="@style.css" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="140.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/hospital.png" />
               </image>
               <VBox.margin>
                  <Insets left="25.0" />
               </VBox.margin>
            </ImageView>
            <TextFlow fx:id="usernamePane" prefHeight="36.0" prefWidth="180.0">
               <children>
                  <Text fx:id="usernameText" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Logged in as ">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Text>
               </children>
            </TextFlow>
            <ToggleButton fx:id="profileBtn" mnemonicParsing="false" prefHeight="40.0" prefWidth="180.0" styleClass="sidebarBtns" stylesheets="@style.css" text="Profile">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </ToggleButton>
            <ToggleButton fx:id="editProfileBtn" mnemonicParsing="false" prefHeight="40.0" prefWidth="180.0" styleClass="sidebarBtns" stylesheets="@style.css" text="Edit Profile">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </ToggleButton>
            <ToggleButton fx:id="enterNewUserBtn" mnemonicParsing="false" prefHeight="40.0" prefWidth="180.0" styleClass="sidebarBtns" stylesheets="@style.css" text="Enter New User">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </ToggleButton>
            <ToggleButton fx:id="searchUserBtn" mnemonicParsing="false" prefHeight="40.0" prefWidth="180.0" styleClass="sidebarBtns" stylesheets="@style.css" text="Search User">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </ToggleButton>
            <ToggleButton fx:id="grantPermissionsBtn" mnemonicParsing="false" prefHeight="40.0" prefWidth="180.0" styleClass="sidebarBtns" stylesheets="@style.css" text="Grand Permissions">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </ToggleButton>
            <ToggleButton fx:id="Parametrics" mnemonicParsing="false" prefHeight="44.0" prefWidth="180.0" styleClass="sidebarBtns" stylesheets="@style.css" text="Parametrics" />
            <ToggleButton fx:id="logoutBtn" mnemonicParsing="false" prefHeight="40.0" prefWidth="180.0" styleClass="sidebarBtns" stylesheets="@style.css" text="Logout">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </ToggleButton>
         </children></VBox>
   </left>
</BorderPane>
